<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Komponen_bahasa"
android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="#fff"
        android:gravity="center_vertical"
        android:elevation="3dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/learning"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/viewpager_item_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submateri"
                android:textColor="#80000000"
                android:textSize="13sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Komponen Bahasa"
                android:textColor="#111"
                android:textSize="18sp"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/komponen_bahasa_fonologi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/less_border_radius"
        android:text="1. Fonologi"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        android:drawableRight="@drawable/arrow"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/komponen_bahasa_morfologi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/less_border_radius"
        android:text="2. Morfologi"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        android:drawableRight="@drawable/arrow"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/komponen_bahasa_sintaksis"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/less_border_radius"
        android:text="3. Sintaksis"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        android:drawableRight="@drawable/arrow"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/komponen_bahasa_semantik"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/less_border_radius"
        android:text="4. Semantik"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        android:drawableRight="@drawable/arrow"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"/>

</LinearLayout>