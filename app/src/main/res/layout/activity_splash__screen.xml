<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash_Screen"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/splash_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/smartphone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ringkasan Materi"
            android:textColor="#61000000"
            android:textSize="14sp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Konsep Dasar Bahasa"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"/>

        <ProgressBar
            android:id="@+id/splash_progressbar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:indeterminateTint="@color/colorPrimary"
            android:layout_marginBottom="40dp"/>


        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/university"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Universitas Negeri Malang Fakulstas Ilmu Pendidikan"
                android:textSize="14sp"
                android:layout_marginLeft="15dp"
                android:textColor="#61000000"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>