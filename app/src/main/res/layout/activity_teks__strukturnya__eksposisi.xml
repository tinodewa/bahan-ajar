<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Teks_Strukturnya_Eksposisi"
android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="#fff"
        android:gravity="center_vertical"
        android:elevation="3dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/laptop"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/viewpager_item_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teks &amp; Strukturnya"
                android:textColor="#80000000"
                android:textSize="13sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eksposisi"
                android:textColor="#111"
                android:textSize="18sp"/>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            android:overScrollMode="always">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teks eksposisi adalah teks yang bertujuan untuk menjelaskan secara singkat, padat, dan jelas agar pembaca mendapat pengetahuan baru tentang suatu informasi atau gagasan. Teks eksposisi bersifat non fiksi atau faktual yang berisi penjelasan secara lugas, obyektif, dan ilmiah. Teks eksposisi cenderung menggunakan gaya penulisan yang bersifat persuasif informatif dengan tujuan agar pembaca dapat memahami dan meyakini pengetahuan yang disampaikan oleh penulis adalah benar. Sifat eksposisi yang ilmiah juga memprasyaratkan penulis menggunakan referensi yang jelas dalam penyampaian informasi khususnya dari fakta-fakta di lapangan. Teks ekpsosisi terdiri atas enam jenis sebagai berikut."
                android:textSize="15dp"
                android:paddingBottom="10dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/eksposisi_1"
                android:contentDescription="Penbendaharaan kata"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jenis-jenis teks eksposisi disesuaikan dengan jenis informasi yang akan disampaikan penulis, seperti informasi yang bersifat definitif, informasi tentang suatu proses atau ilustrasi, hingga informasi yang sifatnya membandingkan atau mempertentangkan sesuatu. Dari jenis ini selanjutkan teks eksposisi disusun berdasarkan stuktur yang terdiri atas (a) judul, (b) tesis, (c) argumen, dan (d) penegasan ulang."
                android:textSize="15dp"
                android:paddingBottom="10dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/eksposisi_2"
                android:contentDescription="Penbendaharaan kata"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>